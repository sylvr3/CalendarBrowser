<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.asu.bsse.sbarnai.ser423calendarbrowser" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_calendarapp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:configChanges="orientation|keyboardHidden|">>

        <activity
            android:name="edu.asu.bsse.sbarnai.ser423calendarbrowser.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.asu.bsse.sbarnai.ser423calendarbrowser.AddEventActivity"
            android:label="@string/title_activity_event" >
        </activity>
        <activity
            android:name="edu.asu.bsse.sbarnai.ser423calendarbrowser.ViewEventActivity"
            android:label="@string/title_activity_view_event" >
        </activity>
        <activity
            android:name="edu.asu.bsse.sbarnai.ser423calendarbrowser.ListOfEventsActivity" android:screenOrientation="portrait"
            android:label="@string/title_activity_list_of_events" >
        </activity>
    </application>

</manifest>
